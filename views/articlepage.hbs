<div class="one-pager">
<article class="coreText"></article>
<header class="articleHeader">
  <h1 class="title-header">{{article.title}}</h1>
  <h2 class="prompt-header">{{article.prompt}}</h2>

</header>
  <div class="img-header">
      <img src="{{article.imgarticle}}" class="img-in-article-onepager">
  </div>

<div class="textofarticle">
  {{article.text}}

</div>


<footer class="articleFooter">
  <p class="author">Written by {{article.author}}</p>
  <time datetime="{{article.date}}">{{article.date}}</time>
</footer>
</article>
<div class="commentMaker form_container">
  <form action="" method="post">
    <label for="comments">Leave a comment here !</label>
    <input id="comments" type="text" name="text" value="best article ever">
    <button type="submit" class="form_btn">ADD</button>
  </form>
</div>
<div class="commentContainer">
  {{#each article.comments}}
  <div class="commentBox">

  <p id="dateofcomment">{{this.posted}}</p>
    <p id="writerofcomment">{{this.writer.pseudo}}</p>
  <p>{{this.text}}</p>
  </div>
  {{/each}}
</div>
</div>

